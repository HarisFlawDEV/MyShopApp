<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.activities.LoginActivity">
    
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/auth_header_image_height"
        android:id="@+id/fl_header_image">

        <ImageView
            android:src="@drawable/login_top_bg"
            android:contentDescription="@string/content_description"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:src="@drawable/logo"
            android:layout_width="@dimen/auth_logo_width_size"
            android:layout_height="@dimen/auth_header_logo_height_size"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter" />

    </FrameLayout>



    <com.nst.myshopapp.utils.MSPTextviewRegular
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:text="@string/title_login"
        android:layout_marginTop="35dp"
        android:textColor="@color/PrimaryText"
        android:textSize="@dimen/title_textSize"/>


    <com.nst.myshopapp.utils.MSPEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/et_email"
        android:padding="@dimen/et_padding"
        tools:text="abc@gmail.com"
        android:textSize="@dimen/et_textSize"
        android:textColor="@color/PrimaryText" />


        <com.nst.myshopapp.utils.MSPEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/et_password"
            android:padding="@dimen/et_padding"
            tools:text="12345678"
            android:textSize="@dimen/et_textSize"
            android:textColor="@color/PrimaryText" />



    <com.nst.myshopapp.utils.MSPTextviewRegular
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_forgot_password"
        android:layout_marginEnd="16dp"
        android:foreground="?attr/selectableItemBackground"
        android:padding="@dimen/clickable_text_view_padding"
        android:text="@string/forgot_password"
        android:textColor="@color/colorSecondaryTextAccent"
        android:textSize="@dimen/forgot_password_textSize"/>


    <com.nst.myshopapp.utils.MSPButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_login"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingBottom="@dimen/btn_padding"
        android:textSize="@dimen/btn_textSize"
        android:textColor="@color/white"
        android:text="Login"/>


    <LinearLayout
        android:layout_marginEnd="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.nst.myshopapp.utils.MSPTextviewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="@dimen/clickable_text_view_padding"
            android:text="Don't have Account"
            android:textColor="@color/colorSecondaryTextAccent"
            android:textSize="@dimen/lbl_text_view_textSize"/>

        <TextView
            android:id="@+id/tv_toregister"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/clickable_text_view_padding"
            android:text="Register"
            android:textColor="@color/colorSecondaryTextAccent"
            android:textSize="@dimen/lbl_text_view_textSize"/>



    </LinearLayout>




    


</LinearLayout>